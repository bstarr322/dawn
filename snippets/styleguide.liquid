    <p class="utility">Utility</p>
    <p class="utility-large">Utility large</p>
  </div>
</div>
<div class="styleguide-section">
  <p class="utility">Buttons</p>
  <div class="line-separator"></div>
  <p>
    <a href="#" class="button button--primary">Primary Button</a>
  </p>
  <p>
    <a href="#" class="button button--secondary">Secondary Button</a>
  </p>
  <p>
    <a href="#" class="button button--tertiary">Tertiary Button</a>
  </p>
  <p>
    <a href="#" class="button button--white">White Button</a>
  </p>
  <p>
    <a href="#" class="button button--link">Purchase</a>
  </p>
  <p>
    <a href="#" class="button button--back">Back</a>
  </p>
  <p>
    <a href="#" class="link underlined-link color-subdued">View all</a>
  </p>
</div>
<div class="styleguide-section">
  {% comment %}
  <p class="utility">Icons</p>
  <div class="line-separator"></div>
  <!-- SOCIAL MEDIA -->
  <div class="styleguide-section">
    <span class="Icon-Wrapper">{%- render 'icon' with 'facebook' -%}</span>
    <span class="Icon-Wrapper">{%- render 'icon' with 'fancy' -%}</span>
    <span class="Icon-Wrapper">{%- render 'icon' with 'instagram' -%}</span>
    <span class="Icon-Wrapper">{%- render 'icon' with 'pinterest' -%}</span>
    <span class="Icon-Wrapper">{%- render 'icon' with 'tumblr' -%}</span>
    <span class="Icon-Wrapper">{%- render 'icon' with 'twitter' -%}</span>
    <span class="Icon-Wrapper">{%- render 'icon' with 'vimeo' -%}</span>
    <span class="Icon-Wrapper">{%- render 'icon' with 'youtube' -%}</span>
    <span class="Icon-Wrapper">{%- render 'icon' with 'linkedin' -%}</span>
    <span class="Icon-Wrapper">{%- render 'icon' with 'snapchat' -%}</span>
  </div>
  <!-- UI -->
  <div class="styleguide-section">
    <span class="Icon-Wrapper">{%- render 'icon' with 'cart' -%}</span>
    <span class="Icon-Wrapper">{%- render 'icon' with 'search' -%}</span>
    <span class="Icon-Wrapper">{%- render 'icon' with 'account' -%}</span>
    <span class="Icon-Wrapper">{%- render 'icon' with 'play' -%}</span>
    <span class="Icon-Wrapper">{%- render 'icon' with 'rss' -%}</span>
    <span class="Icon-Wrapper">{%- render 'icon' with 'share' -%}</span>
    <span class="Icon-Wrapper">{%- render 'icon' with 'lock' -%}</span>
  </div>
  <div class="styleguide-section">
    <span class="Icon-Wrapper">{%- render 'icon' with 'close' -%}</span>
    <span class="Icon-Wrapper">{%- render 'icon' with 'plus' -%}</span>
    <span class="Icon-Wrapper">{%- render 'icon' with 'minus' -%}</span>
    <span class="Icon-Wrapper">{%- render 'icon' with 'select-arrow' -%}</span>
    <span class="Icon-Wrapper">{%- render 'icon' with 'arrow-bottom' -%}</span>
    <span class="Icon-Wrapper">{%- render 'icon' with 'nav' -%}</span>
    <span class="Icon-Wrapper">{%- render 'icon' with 'checkmark' -%}</span>
    <span class="Icon-Wrapper">{%- render 'icon' with 'sale' -%}</span>
  </div>
  <div class="styleguide-section">
    <span class="Icon-Wrapper">{%- render 'icon' with 'wall-1' -%}</span>
    <span class="Icon-Wrapper">{%- render 'icon' with 'wall-2' -%}</span>
    <span class="Icon-Wrapper">{%- render 'icon' with 'wall-3' -%}</span>
    <span class="Icon-Wrapper">{%- render 'icon' with 'wall-4' -%}</span>
  </div>
  <!-- MEDIA API (SHOPIFY ICONS) -->
  <div class="styleguide-section">
    <span class="Icon-Wrapper">{%- render 'icon' with 'media-model-badge' -%}</span>
    <span class="Icon-Wrapper">{%- render 'icon' with 'media-view-in-space' -%}</span>
    <span class="Icon-Wrapper">{%- render 'icon' with 'media-video-badge' -%}</span>
    <span class="Icon-Wrapper">{%- render 'icon' with 'media-arrow-left' -%}</span>
    <span class="Icon-Wrapper">{%- render 'icon' with 'media-arrow-right' -%}</span>
  </div>
  {% endcomment %}

  <p class="utility">Form</p>
  <div class="line-separator"></div>
  <div class="styleguide-section">
    <div class="Form__Group">
      <div class="Form__Item">
        <input type="email" class="Form__Input" name="customer[email]" required="required" placeholder="{{ 'customer.login.email' | t }}" aria-label="{{ 'customer.login.email' | t }}" autofocus>
        <label class="Form__FloatingLabel">{{ 'customer.login.email' | t }}</label>
      </div>
      <div class="Form__Item">
        <div class="Form__Select Select Select--primary">
          {%- render 'icon' with 'select-arrow' -%}
          <select name="address[country]" title="{{ 'customer.addresses.country' | t }}">{{ all_country_option_tags }}</select>
        </div>
      </div>
  </div>

</div>

<p class="utility">Typography</p>
