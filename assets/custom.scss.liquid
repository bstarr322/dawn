    justify-content: center;
    align-items: center;
  }

  .customer {
    &.register {
      text-align: left;
      margin: 0;
      width: 100%;
      max-width: 100%;

      @media screen and (min-width: 750px) {
        width: 80%;
      }

      .caption {
        a {
          &.button {
            display: inline-flex;
          }
