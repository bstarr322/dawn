  .login-form {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .customer {
    &.login {
      text-align: left;
      margin: 0;
      width: 100%;
      max-width: 100%;

      @media screen and (min-width: 750px) {
        width: 80%;
      }

      .caption {
        a {
          &.button {
