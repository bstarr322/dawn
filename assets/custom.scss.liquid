// Footer styles
.footer__blocks-wrapper {
  display: grid;
  grid-gap: 5rem;
  margin-top: 5rem;

  .footer__list-social {
    .link--text {
      color: var(--color-white);
      transition: all ease 0.3s;

      &:hover {
        color: var(--color-ink);
        background-color: var(--color-white);

        .icon {
          transform: none;
        }

        path {
          fill: var(--color-ink);
        }
      }
    }
  }

  @media screen and (min-width: 750px) {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-gap: 1rem;
  }
}

.footer__content-bottom-wrapper {
  .footer__column--info {
    align-items: flex-start;
  }

  .copyright__content {
    font-family: var(--font-body-family);
    font-style: italic;
    font-weight: 400;
    font-size: 12px;
    line-height: 1.667;
    letter-spacing: 0.3px;
    color: var(--color-white);
    margin: 0;

    a {
      font-family: var(--font-body-family);
      text-transform: capitalize;
      font-weight: 400;
      font-size: 14px;
      line-height: 17px;
      letter-spacing: 0.3px;
      padding: 0 10px;
      border-right: 1px solid var(--color-white);

      &:hover {
        color: var(--color-white);
        text-decoration: underline;
      }

      &:first-child {
        padding-left: 0;
      }

      &:last-child {
        border-right: none;
      }
    }
  }

  @media screen and (min-width: 750px) {
    .copyright__content {
      font-size: 14px;
      line-height: 1.3;
    }
  }
}

.footer-block__newsletter {
  .field__input {
    border-bottom: 1px solid var(--color-white);
    color: var(--color-white);
    padding-right: 10.5rem;

    &::-webkit-input-placeholder {
      /* Chrome/Opera/Safari */
      color: var(--color-subdued);
    }
    &::-moz-placeholder {
      /* Firefox 19+ */
      color: var(--color-subdued);
    }
    &:-ms-input-placeholder {
      /* IE 10+ */
      color: var(--color-subdued);
    }
    &:-moz-placeholder {
      /* Firefox 18- */
      color: var(--color-subdued);
    }
  }

  .field__label {
    color: var(--color-subdued);
    left: 0;
  }

  .newsletter-form__button {
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    min-height: 0;
    min-width: 0;
    padding: 0;

    &:hover {
      background: transparent;
    }
  }
}

// Newsletter styles

.newsletter__wrapper {
  max-width: 600px;

  h2 {
    &.h5 {
      text-transform: capitalize;
      font-family: var(--font-body-family);
      font-weight: normal;
      font-size: 16px;
      line-height: 22px;
      letter-spacing: 0.3px;
      color: var(--color-ink);
      margin-top: 80px;
      margin-bottom: 40px;
    }
  }

  .newsletter__subheading {
    text-transform: capitalize;
    font-family: var(--font-body-family);
    font-style: italic;
    font-weight: normal;
    font-size: 28px;
    line-height: 40px;
    letter-spacing: 0.01em;
    color: var(--color-ink);
    margin-top: 0;
    margin-bottom: 30px;
  }

  .password-form {
    margin-bottom: 15px;

    .password-field {
      flex: 100%;

      .field__input {
        text-align: center;
      }

      .field__label {
        left: 50%;
        transform: translateX(-50%);
      }
    }

    .password-button {
      flex: 100%;
      margin-left: 0;
    }
  }

  .password__footer-text {
    font-family: var(--font-body-family);
    font-style: italic;
    font-weight: normal;
    font-size: 14px;
    line-height: 17px;
    color: var(--color-ink);
    margin-top: 25px;

    a {
      font-family: var(--font-heading-family);
      font-style: normal;
      font-weight: bold;
      font-size: 12px;
      line-height: 20px;
      letter-spacing: 0.2em;
      text-transform: uppercase;
    }
  }
}

// Account Page
.account-title {
  margin: 0;
}
.account-welcome {
  display: flex;
  justify-content: space-between;
  align-items: center;

  h3 {
    font-size: 25px;
    line-height: 40px;
    font-weight: normal;
    letter-spacing: 0.01em;

    @media screen and (min-width: 750px) {
      font-size: 28px;
    }
  }
}
.customer {
  &.account {
    margin-top: 20px;

    @media screen and (min-width: 750px) {
      margin: 6rem auto 9rem;
    }
  }

  h4 {
    font-size: 16px;
    margin-bottom: 2rem;

    @media screen and (min-width: 750px) {
      font-size: 2rem;
    }
  }
  .order-history {
    display: none;
    @media screen and (min-width: 750px) {
      display: table;
    }
    thead {
      th {
        text-align: center;

        &:first-child {
          text-align: left;
        }
      }
    }

    tbody {
      td {
        text-align: center;

        &:first-child {
          text-align: left;

          a {
            font-weight: normal;
            color: var(--color-subdued);
            letter-spacing: 0.3px;
          }
        }

        &:last-child {
          text-align: right;
        }
      }
    }

    tr {
      border-bottom: 1px solid var(--color-medium-grey);
    }
  }

  .order-history__mobile {
    display: block;

    @media screen and (min-width: 750px) {
      display: none;
    }

    .order-item {
      a {
        margin-top: 10px;
        margin-bottom: 50px;
      }
    }

    .order-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 5px 0;
      border-bottom: 1px solid var(--color-medium-grey);
      margin-bottom: 15px;
    }

    .order-summary {
      display: flex;
      flex-flow: wrap;
    }

    .order-summary__item {
      margin-right: 15px;
      span {
        display: block;
        margin-bottom: 10px;
      }
    }
  }

  .addresses {
    div[data-address] {
      display: block;

      @media screen and (min-width: 750px) {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-flow: wrap;
      }

      #AddAddress {
        flex-basis: 100%;
        max-width: 100%;
      }
    }

    ul[role="list"] {
      display: flex;
      flex-flow: wrap;

      li {
        flex-basis: 100%;
        max-width: 100%;
        margin-top: 0;
        text-align: left;

        @media screen and (min-width: 750px) {
          flex-basis: 25%;
          max-width: 25%;
        }

        a {
          display: block;
          margin-top: 20px;
        }

        h5 {
          color: var(--color-grey);
        }

        .delete {
          float: right;
          color: var(--color-subdued);

          @media screen and (min-width: 750px) {
            float: none;
          }
        }

        .edit {
          float: left;

          @media screen and (min-width: 750px) {
            float: none;
          }
        }
      }
    }
  }
}

// Featured Collections with Products
