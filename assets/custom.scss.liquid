  .title-wrapper {
    max-width: 56rem;
    padding-left: 3.2rem;
    padding-right: 3.2rem;
    margin-bottom: 2.5rem;
  }

  .title {
    margin-top: 0;
    margin-bottom: 1rem;
  }

  .description {
  }

  .collection-products {
    display: flex;
    overflow: hidden;
  }

  .collection-card {
    width: 33.33%;
    min-width: 33.33%;

    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  }

  swiperjs-component {
    width: 66.67%;
    max-width: 66.67%;
  }

  .product-card {
    width: 25%;
    min-width: 25%;
  }

  @media screen and (min-width: 750px) {
    .title-wrapper {
      margin-bottom: 4rem;
    }
  }
}

