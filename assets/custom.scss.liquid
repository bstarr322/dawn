  margin-bottom: 0;

  .login-form {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .customer {
    &.login {
      text-align: left;
      margin: 0;
      width: 100%;
      max-width: 100%;

      @media screen and (min-width: 750px) {
        width: 80%;
      }

      .caption {
        a {
          &.button {
            display: inline-flex;
          }
        }
      }
    }
  }

  .button--secondary {
    display: flex;
    width: 100%;
    justify-content: flex-start;
  }

  .image-wrapper {
    display: none;

    @media screen and (min-width: 750px) {
      display: block;
    }

    img {
      width: 100%;
      height: 100%;
    }
  }
}

