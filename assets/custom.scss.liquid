// Section: Featured Collection
.flickity-button-wrapper,
.slider-button-wrapper {
  display: grid;
  grid-gap: 2rem;
  grid-template-columns: auto 1fr auto;
  align-items: center;
  justify-items: baseline;

  .icon {
    height: auto;
  }

  @media screen and (max-width: 749px) {
    [data-slider-previous] {
      position: absolute;
      left: -3rem;
      top: 50%;
      transform: translateY(-50%);
    }

    [data-slider-next] {
      position: absolute;
      right: -3rem;
      top: 50%;
      transform: translateY(-50%);
    }
  }

  @media screen and (min-width: 750px) {
    font-size: 0;
    margin-bottom: 2rem;
  }
}

.view-all-wrapper {
  display: grid;
  height: auto;
  width: 17rem;
  align-items: center;

  .collection & {
    // height: calc(100% - 8.5rem);
  }

  .featured-collection & {
    @media screen and (min-width: 750px) {
      margin-bottom: 9.3rem;
    }
  }

  .flickity-enabled & {
    display: grid;
    height: 100%; // Remove content height
    width: 17rem;
    align-items: center;
    margin-bottom: 0;

    .collection & {
      // height: calc(100% - 8.5rem);
    }
  }
}

// Section: Collection List
.collection-list {
  padding: 0;

  &.flickity-enabled,
  &.swiper-container-initialized {
    .collection-list__item {
      width: 90%;
    }
  }
}

.collection-list__titles {
  max-width: 12rem;
  overflow: visible;
  text-align: center;

  .swiper-slide {
    background: var(--color-white);
  }

  @media screen and (min-width: 750px) {
    text-align: left;
  }
}

.collection-list__title {
  margin: 0;
}

